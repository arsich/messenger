<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <rotate
            android:fromDegrees="-45"
            android:pivotX="0%"
            android:pivotY="0%"
            android:toDegrees="0" >
            <shape android:shape="rectangle" >
                <solid android:color="@android:color/white" />
                <corners android:radius="@dimen/speech_bubble_corner_radius_small" />
            </shape>
        </rotate>
    </item>
    <item android:left="@dimen/speech_bubble_corner_size">
        <shape android:shape="rectangle" >
            <solid android:color="@android:color/white" />
            <corners android:radius="@dimen/speech_bubble_corner_radius" />
        </shape>
    </item>
</layer-list>