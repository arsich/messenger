<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="NoActionBar" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@color/colorPrimary</item>
    </style>

    <style name="NoActionBarChat" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="AppTheme.Toolbar" parent="Widget.AppCompat.Light.ActionBar.Solid.Inverse" >
        <item name="android:textColorPrimary">@android:color/white</item>

        <item name="elevation">0dp</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="text_items_title">
        <item name="android:textSize">@dimen/header_font_size</item>
        <item name="android:textColor">@color/darkText</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="text_items_content">
        <item name="android:textSize">@dimen/regular_font_size</item>
        <item name="android:textColor">@color/grayText</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="text_toolbar_title">
        <item name="android:textSize">@dimen/regular_font_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">bottom</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="text_toolbar_subtitle">
        <item name="android:textSize">@dimen/small_font_size</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/whiteOpacity</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">bottom</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>


</resources>
